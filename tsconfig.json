{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true, // https://github.com/facebook/create-react-app/issues/9429#issuecomment-674994709
    "useUnknownInCatchVariables": true,
    // "exactOptionalPropertyTypes": true, // needs better support in external libraries
    "importsNotUsedAsValues": "error",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
